{
   "manifest_version": 2,

   "name": "Desk Trainer",
   "description": 
      "Quick work out when you are distracted!",
   "version": "1.0",

   "content_scripts": [
     {
      "matches":["<all_urls>"],
      "js":["redirect.js"],
      "all_frames": true,
      "run_at": "document_start"
     }
   ],

   "permissions": [
      "notifications", 
      "tabs", 
      "<all_urls>",
      "https://secure.flickr.com/"
   ],
   "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
   }
}