{
  "manifest_version": 2,

  "name": "Desk Trainer",
  "description": "Yay training.",
  "version": "1.0",

  "content_scripts": [
    {
      "matches":["<all_urls>"],
      "js":["background.js"],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "options_page": "options.html",

  "permissions": [
    "storage"
  ]
}
